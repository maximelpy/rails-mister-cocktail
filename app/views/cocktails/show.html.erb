<H1> <%= @cocktail.name%> </H1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
  <% end %>
</ul>

<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
<%= link_to "Go back", cocktails_path, class: "btn btn-warning" %>



